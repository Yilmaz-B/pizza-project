{% extends 'base.html.twig' %}
{% block body %}
    {{ parent() }}
<body>
    <div class="container-md">
        <div class="row">
            {% for product in products %}
                <div class="col-sm-3">
                    <div class="card mb-4">
                        <img src="{{ asset(product.image) }}" class="card-img-top p-2">
                        <div class="card-body">
                            <h4>{{ product.name }}</h4>
                            <p>{{ product.description }}</p>
                            <h5> {{ product.price }}</h5>
                            <a href="{{ path('order', {'id':product.id} ) }}" class="btn btn-primary p-2 mt-4 mb-4">Bestel</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</body>
{% endblock %}